<%= notice %>
<%= alert %>
<div class="container-fluid vh-100">
  <div class="row h-100">
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar border-end p-0 h-100 overflow-auto">
      <div class="position-sticky pt-3 text-white">
        <div class="text-center mb-4">
          <h5 class="mt-2">Admin</h5>
        </div>
        <h5 class="px-3 py-2 border-bottom">Dashboard</h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <%= link_to 'Homepage', home_index_path, class: 'nav-link active fw-bold bi bi-house-door'  %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="bi bi-people"></i> Member Management
            </a>
          </li>
          <li class="nav-item">
            <%= link_to 'Item Management', item_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
          <li class="nav-item">
            <%= link_to 'Category Management', category_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
          <li class="nav-item">
            <%= link_to 'Ticket Management', category_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 d-flex flex-column">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-3">
        <div class="container-fluid">
          <div class="navbar-nav ms-auto d-flex align-items-center">
            <button class="btn btn-outline-secondary me-2">Change Language</button>
            <%= button_to 'Sign Out', destroy_admin_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </div>
        </div>
      </nav>

      <!-- Content Area -->
      <div class="content bg-white shadow p-4 rounded flex-grow-1 overflow-auto">
        <p class="text-muted">Hereâ€™s your dashboard overview for items. Navigate using the sidebar to manage your tasks.</p>
        <%= link_to 'Add', new_item_path, class: 'btn btn-success' %>
        <div class="d-flex flex-column vh-100">
          <div class="flex-grow-1 overflow-auto">
            <table class="table table-hover table-bordered mb-0">
              <thead class="table-dark">
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Minimum Tickets</th>
                <th>Categories</th>
                <th>State</th>
                <th>Batch Count</th>
                <th>Online At</th>
                <th>Offline At</th>
                <th>Start At</th>
                <th>Status</th>
                <th>Actions</th>
                <th>Change State</th>
              </tr>
              </thead>
              <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td>
                    <% if item.image.present? %>
                      <%= image_tag item.image.url, size: "50x50" %>
                    <% else %>
                      None
                    <% end %>
                  </td>

                  <td><%= item.name || "No name" %></td>
                  <td><%= item.quantity %></td>
                  <td><%= item.minimum_tickets %></td>
                  <td><%= item.categories.pluck(:name).join(', ') %></td>
                  <td><%= item.state %></td>
                  <td><%= item.batch_count %></td>
                  <td><%= item.online_at %></td>
                  <td><%= item.offline_at %></td>
                  <td><%= item.start_at %></td>
                  <td><%= item.status %></td>
                  <td>
                    <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-warning' %>
                    <%= button_to 'Delete', item_path(item), method: :delete, class: 'btn btn-danger' %>
                  </td>
                  <td>
                    <% if item.active? %>

                      <% if item.may_start? %>
                        <%= button_to 'Start', item_start_path(item), method: :patch, class: 'btn btn-warning' %>
                      <% end %>

                      <% if item.may_pause? %>
                        <%= button_to 'Pause', item_pause_path(item), method: :patch, class: 'btn btn-danger' %>
                      <% end %>

                      <% if item.may_end? %>
                        <%= button_to 'End', item_end_path(item), method: :patch, class: 'btn btn-danger' %>
                      <% end %>

                      <% if item.may_cancel? %>
                        <%= button_to 'Cancel', item_cancel_path(item), method: :patch, class: 'btn btn-danger' %>
                      <% end %>

                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<style>
    /* Sidebar */
    .sidebar {
        transition: background-color 0.3s;
        height: 100vh;  /* Ensure full height of screen */
        position: sticky;
    }

    .sidebar .nav-link {
        transition: background-color 0.3s, color 0.3s;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    /* Content Area */
    .content {
        background: #f8f9fa;
        height: 100vh; /* Fill the available space */
        overflow: auto;
    }

    .table th, .table td {
        vertical-align: middle; /* Vertically center the table content */
    }

    .table img {
        width: 50px; /* Ensure the image is small */
        height: 50px; /* Keep the image square */
        object-fit: cover; /* Ensure the image does not stretch */
    }

    .navbar {
        border-bottom: 1px solid #eaeaea;
    }

    .navbar-nav .btn {
        transition: background-color 0.3s;
    }

    .navbar-nav .btn:hover {
        background-color: #dc3545;
        color: white;
    }

    /* Ensure the content doesn't overflow */
    .d-flex.flex-column {
        flex: 1;
    }

    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
    }
</style>
