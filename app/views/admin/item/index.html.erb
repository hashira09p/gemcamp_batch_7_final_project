<%= alert %>
<div class="container-fluid vh-100">
  <div class="row h-100">
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar border-end p-0 h-100 overflow-auto">
      <div class="position-sticky pt-3 text-white">
        <div class="text-center mb-4">
          <h5 class="mt-2">Admin</h5>
        </div>
        <h5 class="px-3 py-2 border-bottom">Dashboard</h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <%= link_to 'Homepage', home_index_path, class: 'nav-link active fw-bold bi bi-house-door'  %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="bi bi-people"></i> Member Management
            </a>
          </li>
          <li class="nav-item">
            <%= link_to 'Item Management', item_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 d-flex flex-column">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-3">
        <div class="container-fluid">
          <div class="navbar-nav ms-auto d-flex align-items-center">
            <button class="btn btn-outline-secondary me-2">Change Language</button>
            <%= button_to 'Sign Out', destroy_admin_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </div>
        </div>
      </nav>

      <!-- Content Area -->
      <div class="content bg-white shadow p-4 rounded flex-grow-1 overflow-auto">
        <p class="text-muted">Hereâ€™s your dashboard overview for items. Navigate using the sidebar to manage your tasks.</p>
        <%= link_to 'Add', new_item_path, class: 'btn btn-success' %>
        <div class="d-flex flex-column vh-100">
          <div class="flex-grow-1 overflow-auto">
            <table class="table table-hover table-bordered mb-0">
              <thead class="table-dark">
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Minimum Tickets</th>
                <th>State</th>
                <th>Batch Count</th>
                <th>Online At</th>
                <th>Offline At</th>
                <th>Start At</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
              </thead>
              <tbody>
              <% @items.each do |item| %>
                <tr>
                  <% if item.image.nil? %>
                    <td>None</td>
                  <% else %>
                    <td><%= image_tag item.image.url if item.image.present? %></td>
                  <% end %>

                  <% if item.name.nil? %>
                    <td>No username</td>
                  <% else %>
                    <td><%= item.name %></td>
                  <% end %>

                  <td><%= item.quantity %></td>
                  <td><%= item.minimum_tickets %></td>
                  <td><%= item.state %></td>
                  <td><%= item.batch_count %></td>
                  <td><%= item.online_at %></td>
                  <td><%= item.offline_at %></td>
                  <td><%= item.start_at %></td>
                  <td><%= item.status %></td>
                  <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-warning' %>
                      <%= button_to 'Delete', item_path(item), method: :delete, class: 'btn btn-danger' %>
                  </td>

                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </main>
  </div>
</div>

<style>
    .sidebar {
        transition: background-color 0.3s;
    }

    .sidebar .nav-link {
        transition: background-color 0.3s, color 0.3s;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .content {
        background: #f8f9fa;
    }

    h2 {
        color: #343a40;
    }

    .navbar {
        border-bottom: 1px solid #eaeaea;
    }

    .navbar-nav .btn {
        transition: background-color 0.3s;
    }

    .navbar-nav .btn:hover {
        background-color: #dc3545;
        color: white;
    }
</style>
