<%= notice %>
<%= alert %>
<div class="container-fluid vh-100">
  <div class="row h-100">
    <!-- Sidebar -->
    <%= render "partial/admin/sidebar" %>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 d-flex flex-column">
      <!-- Top Navbar -->
      <%= render "partial/admin/top_navbar" %>

      <!-- Content Area -->
      <div class="content bg-white shadow p-4 rounded flex-grow-1 overflow-auto">
        <header class="bg-light text-dark py-4 shadow-sm">
          <div class="container text-center">
            <h2 class="fw-semibold text-uppercase mb-2">Offer Management</h2>
          </div>
        </header>

        <!-- Search Filters -->
        <%#= form_with url: offers_path, method: :get, class: 'row g-3 align-items-end mb-4' do |f| %>
<!--          <div class="col-md-2">-->
            <%#= f.label :status, 'Status', class: 'form-label' %>
            <%#= f.select :status, options_for_select(@offer_status, params[:status]), { include_blank: 'All Status' }, class: 'form-select' %>
<!--          </div>-->

<!--          <div class="col-md-2">-->
            <%#= f.submit 'Filter', class: 'btn btn-primary w-100' %>
<!--          </div>-->

        <%# end %>

        <%= link_to 'Add offer', new_offer_path, class: 'btn btn-success' %>
        <div class="d-flex flex-column vh-100">
          <div class="flex-grow-1 overflow-auto">
            <table class="table table-striped table-bordered table-hover">
              <thead class="table-dark">
              <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Offer Name</th>
                <th>Serial Number</th>
                <th>State</th>
                <th>Coin</th>
                <th>Amount</th>
                <th>Remarks</th>
                <th>genre</th>
              </tr>
              </thead>
              <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.id %></td>
                  <% if order.user.username.blank? %>
                    <td>Newbie</td>
                  <% else %>
                    <td><%= order.user.username %></td>
                  <% end %>
                  <td></td>
                  <td><%= order.serial_number %></td>
                  <td><%= order.state %></td>
                  <td><%= order.coin %></td>
                  <td><%= order.amount %></td>
                  <td><%= order.remarks %></td>
                  <td><%= order.genre %></td>
                </tr>
              <% end %>
              </tbody>
            </table>

            <h1>Subtotal: <%= @sub_total %></h1>

            <%= paginate @orders %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>



<style>
    /* Sidebar */
    .sidebar {
        transition: background-color 0.3s;
        height: 100vh; /* Ensure full height of screen */
        position: sticky;
    }

    .sidebar .nav-link {
        transition: background-color 0.3s, color 0.3s;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    /* Content Area */
    .content {
        background: #f8f9fa;
        height: 100vh; /* Fill the available space */
        overflow: auto;
    }

    .table th, .table td {
        vertical-align: middle; /* Vertically center the table content */
    }

    .table img {
        width: 50px; /* Ensure the image is small */
        height: 50px; /* Keep the image square */
        object-fit: cover; /* Ensure the image does not stretch */
    }

    .navbar {
        border-bottom: 1px solid #eaeaea;
    }

    .navbar-nav .btn {
        transition: background-color 0.3s;
    }

    .navbar-nav .btn:hover {
        background-color: #dc3545;
        color: white;
    }

    /* Ensure the content doesn't overflow */
    .d-flex.flex-column {
        flex: 1;
    }

    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
    }
</style>
