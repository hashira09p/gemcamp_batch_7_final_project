<%= notice %>
<%= alert %>
<div class="container-fluid vh-100">
  <div class="row h-100">
    <!-- Sidebar -->
    <%= render "partial/admin/sidebar" %>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 d-flex flex-column">
      <!-- Top Navbar -->
      <%= render "partial/admin/top_navbar" %>

      <!-- Content Area -->
      <div class="content bg-white shadow p-4 rounded flex-grow-1 overflow-auto">
        <header class="py-3 border-bottom mb-4">
          <h2 class="text-center text-uppercase fw-bold mb-0">Order Management</h2>
        </header>

        <!-- Summary Section -->
        <div class="row text-center bg-light rounded shadow-sm py-3 mb-4">
          <div class="col-md-3">
            <h6 class="fw-bold mb-1">Amount Subtotal</h6>
            <p class="mb-0"><%= @amount_subtotal %></p>
          </div>
          <div class="col-md-3">
            <h6 class="fw-bold mb-1">Amount Total</h6>
            <p class="mb-0"><%= @amount_total.sum(:amount) %></p>
          </div>
          <div class="col-md-3">
            <h6 class="fw-bold mb-1">Coins Subtotal</h6>
            <p class="mb-0"><%= @coins_subtotal %></p>
          </div>
          <div class="col-md-3">
            <h6 class="fw-bold mb-1">Coins Total</h6>
            <p class="mb-0"><%= @coins_total.sum(:coin) %></p>
          </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
            <tr>
              <th>Order ID</th>
              <th>User</th>
              <th>Offer Name</th>
              <th>Serial Number</th>
              <th>State</th>
              <th>Coin</th>
              <th>Amount</th>
              <th>Remarks</th>
              <th>Genre</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td class="text-center"><%= order.id %></td>
                <td class="text-center"><%= order.user.username.presence || "Newbie" %></td>
                <td class="text-center"><%= order.offer&.name %></td>
                <td class="text-center"><%= order.serial_number %></td>
                <td class="text-center"><%= order.state %></td>
                <td class="text-center"><%= order.coin %></td>
                <td class="text-center"><%= order.amount %></td>
                <td class="text-center"><%= order.remarks %></td>
                <td class="text-center"><%= order.genre %></td>
                <td class="text-center">
                  <% if order.may_pay? %>
                    <%= button_to 'Pay', order_pay_path(order), method: :patch, class: 'btn btn-success' %>
                  <% end %>

                  <% if order.may_cancel? %>
                    <%= button_to 'Cancel', order_cancel_path(order), method: :patch, class: 'btn btn-danger' %>
                  <% end %>

                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <%= paginate @orders %>
        </div>
      </div>
    </main>
  </div>
</div>

<style>
    /* Sidebar Styling */
    .sidebar {
        background-color: #343a40;
        height: 100vh;
        color: #fff;
        position: sticky;
    }

    .sidebar .nav-link {
        color: rgba(255, 255, 255, 0.75);
        transition: all 0.3s ease;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
        color: #fff;
        background-color: #495057;
    }

    /* Main Content Styling */
    .content {
        background-color: #f9f9f9;
        border-radius: 8px;
    }

    .table thead th {
        vertical-align: middle;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .table td,
    .table th {
        vertical-align: middle;
        font-size: 0.9rem;
    }

    .table img {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 50%;
    }

    /* Responsive Table Styling */
    .table-responsive {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    /* Navbar Styling */
    .navbar {
        border-bottom: 1px solid #e3e6f0;
        background: white;
    }

    .navbar-nav .btn {
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .navbar-nav .btn:hover {
        background-color: #dc3545;
        color: white;
    }
</style>
