<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h4>Balance Operate</h4>
    </div>
    <div class="card-body">
      <ul class="nav nav-tabs" id="balanceTabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="increase-tab" data-bs-toggle="tab" href="#increase" role="tab" aria-controls="increase" aria-selected="true">Increase</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="deduct-tab" data-bs-toggle="tab" href="#deduct" role="tab" aria-controls="deduct" aria-selected="false">Deduct</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="bonus-tab" data-bs-toggle="tab" href="#bonus" role="tab" aria-controls="bonus" aria-selected="false">Bonus</a>
        </li>
      </ul>

      <div class="tab-content mt-3" id="balanceTabContent">
        <!-- Increase Tab -->
        <div class="tab-pane fade show active" id="increase" role="tabpanel" aria-labelledby="increase-tab">
          <%= form_with url: users_client_orders_path, method: :post, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :coins, 'Coins', class: 'form-label' %>
              <%= form.number_field :coins, class: 'form-control', placeholder: 'Enter coins', required: true %>
            </div>
            <div class="mb-3">
              <%= form.label :genre, 'Genre', class: 'form-label' %>
              <%= form.text_field :genre, class: 'form-control', placeholder: 'Enter genre' %>
            </div>
            <div class="mb-3">
              <%= form.label :remarks, 'Remarks', class: 'form-label' %>
              <%= form.text_area :remarks, class: 'form-control', rows: 2, placeholder: 'Enter remarks' %>
            </div>
            <%= form.submit 'Submit', class: 'btn btn-primary' %>
          <% end %>
        </div>

        <!-- Deduct Tab -->
        <div class="tab-pane fade" id="deduct" role="tabpanel" aria-labelledby="deduct-tab">
          <%= form_with url: users_client_orders_path, method: :post, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :coins, 'Coins', class: 'form-label' %>
              <%= form.number_field :coins, class: 'form-control', placeholder: 'Enter coins', required: true %>
            </div>
            <div class="mb-3">
              <%= form.label :genre, 'Genre', class: 'form-label' %>
              <%= form.text_field :genre, class: 'form-control', placeholder: 'Enter genre' %>
            </div>
            <div class="mb-3">
              <%= form.label :remarks, 'Remarks', class: 'form-label' %>
              <%= form.text_area :remarks, class: 'form-control', rows: 2, placeholder: 'Enter remarks' %>
            </div>
            <%= form.submit 'Submit', class: 'btn btn-primary' %>
          <% end %>
        </div>

        <!-- Bonus Tab -->
        <div class="tab-pane fade" id="bonus" role="tabpanel" aria-labelledby="bonus-tab">
          <%= form_with url: users_client_orders_path, method: :post, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :coins, 'Coins', class: 'form-label' %>
              <%= form.number_field :coins, class: 'form-control', placeholder: 'Enter coins', required: true %>
            </div>
            <div class="mb-3">
              <%= form.label :genre, 'Genre', class: 'form-label' %>
              <%= form.text_field :genre, class: 'form-control', placeholder: 'Enter genre' %>
            </div>
            <div class="mb-3">
              <%= form.label :remarks, 'Remarks', class: 'form-label' %>
              <%= form.text_area :remarks, class: 'form-control', rows: 2, placeholder: 'Enter remarks' %>
            </div>
            <%= form.submit 'Submit', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>

      <!-- Readonly Form -->
      <div class="mt-4">
        <h5>Readonly User Information</h5>
        <%= form_with url: '#', local: true do |form| %>
          <div class="row">
            <div class="col-md-4">
              <%= form.label :username, 'Username', class: 'form-label' %>
              <%= form.text_field :username, class: 'form-control', value: 'JohnDoe', readonly: true %>
            </div>
            <div class="col-md-4">
              <%= form.label :promoter_name, "Promoter's Name", class: 'form-label' %>
              <%= form.text_field :promoter_name, class: 'form-control', value: 'PromoterX', readonly: true %>
            </div>
            <div class="col-md-4">
              <%= form.label :coins, 'Coins', class: 'form-label' %>
              <%= form.number_field :coins, class: 'form-control', value: 1000, readonly: true %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
