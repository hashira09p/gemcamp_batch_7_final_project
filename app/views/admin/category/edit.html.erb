<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title text-center">Edit Category</h5>
        </div>
        <div class="card-body">
          <%= form_with model: @category, url: category_path, local: true do |f| %>

            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "Edit Category", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
