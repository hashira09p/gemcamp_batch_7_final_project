<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container-fluid vh-100">
  <div class="row h-100">
    <!-- Sidebar -->
    <%= render "partial/admin/aside" %>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 d-flex flex-column">
      <!-- Top Navbar -->
      <%= render "partial/admin/top_navbar" %>

      <!-- Content Area -->
      <div class="content bg-white shadow p-4 rounded flex-grow-1 overflow-auto">
        <header class="bg-light text-dark py-4 shadow-sm">
          <div class="container text-center">
            <h2 class="fw-semibold text-uppercase mb-2">Edit a member level</h2>
          </div>
        </header>
        <div class="d-flex flex-column vh-100">
          <div class="flex-grow-1 overflow-auto">
            <%= form_with model: @member_level, url: member_level_path, method: :patch, local: true do |f| %>
              <div class="mb-3">
                <%= f.label :level %>
                <%= f.number_field :level, class: "form-control", required: true  %>
              </div>

              <div class="mb-3">
                <%= f.label :required_members %>
                <%= f.number_field :required_members, class: "form-control", required: true  %>
              </div>

              <div class="mb-3">
                <%= f.label :coins %>
                <%= f.number_field :coins, class: "form-control", required: true  %>
              </div>

              <div class="d-grid">
                <%= f.submit 'Save', class: "btn btn-primary" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </main>
  </div>
</div>
