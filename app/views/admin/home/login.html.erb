<!-- app/views/admin/home/login.html.erb -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <div class="card-header bg-primary text-white text-center">
      <h4 class="mb-0">Admin Login Page</h4>
    </div>
    <div class="card-body">
      <h5 class="card-title text-center mb-4">Admin Login</h5>

      <%= form_with(url: admin_session_path, local: true, html: { class: "needs-validation" }) do |f| %>
        <div class="form-floating mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, required: true %>
          <%= f.label :email, "Email", class: "form-label" %>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
          <%= f.label :password, "Password", class: "form-label" %>
        </div>

        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Login", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
