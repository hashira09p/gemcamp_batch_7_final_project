<div class="container-fluid vh-100">
  <div class="row h-100">
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar border-end p-0 h-100 overflow-auto">
      <div class="position-sticky pt-3 text-white">
        <div class="text-center mb-4">
          <h5 class="mt-2">Admin</h5>
        </div>
        <h5 class="px-3 py-2 border-bottom">Dashboard</h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <%= link_to 'Homepage', home_index_path, class: 'nav-link active fw-bold bi bi-house-door'  %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="bi bi-people"></i> Member Management
            </a>
          </li>
          <li class="nav-item">
            <%= link_to 'Item Management', item_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
          <li class="nav-item">
            <%= link_to 'Category Management', category_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
          <li class="nav-item">
            <%= link_to 'Ticket Management', category_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 d-flex flex-column">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-3">
        <div class="container-fluid">
          <div class="navbar-nav ms-auto d-flex align-items-center">
            <button class="btn btn-outline-secondary me-2">Change Language</button>
            <%= button_to 'Sign Out', destroy_admin_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </div>
        </div>
      </nav>

      <!-- Content Area -->
      <div class="content bg-white shadow p-4 rounded flex-grow-1 overflow-auto">
        <h2 class="mb-3">Welcome back, <%= current_admin_user&.username %></h2>
        <p class="text-muted">Hereâ€™s your dashboard overview. Navigate using the sidebar to manage your tasks.</p>

        <div class="d-flex flex-column vh-100">

          <div class="flex-grow-1 overflow-auto">
            <table class="table table-hover table-bordered mb-0">
              <thead class="table-dark">
              <tr>
                <th>Parent Email</th>
                <th>Username</th>
                <th>Total Deposit</th>
                <th>Member Total Deposits</th>
                <th>Coins</th>
                <th>Children Members</th>
                <th>Phone Number</th>
              </tr>
              </thead>
              <tbody>
              <% @clients.each do |client| %>
                <tr>
                  <% if client.parent.nil? %>
                    <td>None</td>
                  <% else %>
                    <td><%= client.parent&.email %></td>
                  <% end %>

                  <% if client.username.nil? || client.username.blank? %>
                    <td>No username</td>
                  <% else %>
                    <td><%= client.username %></td>
                  <% end %>

                  <td><%= client.total_deposit %></td>
                  <td><%= client.children.sum(:total_deposit) %></td>
                  <td><%= client.coins %></td>
                  <td><%= client.children_members %></td>

                  <% if client.phone_number.nil? %>
                    <td>No Phone Number</td>
                  <% else %>
                    <td><%= client.phone_number %></td>
                  <% end %>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </main>
  </div>
</div>

<style>
    .sidebar {
        transition: background-color 0.3s;
    }

    .sidebar .nav-link {
        transition: background-color 0.3s, color 0.3s;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .content {
        background: #f8f9fa;
    }

    h2 {
        color: #343a40;
    }

    .navbar {
        border-bottom: 1px solid #eaeaea;
    }

    .navbar-nav .btn {
        transition: background-color 0.3s;
    }

    .navbar-nav .btn:hover {
        background-color: #dc3545;
        color: white;
    }
</style>
