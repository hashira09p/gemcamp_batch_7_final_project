<%= notice %>
<%= alert %>
<div class="container-fluid vh-100">
  <div class="row h-100">
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar border-end p-0 h-100 overflow-auto">
      <div class="position-sticky pt-3 text-white">
        <div class="text-center mb-4">
          <h5 class="mt-2">Admin</h5>
        </div>
        <h5 class="px-3 py-2 border-bottom">Dashboard</h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <%= link_to 'Homepage', home_index_path, class: 'nav-link active fw-bold bi bi-house-door'  %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="bi bi-people"></i> Member Management
            </a>
          </li>
          <li class="nav-item">
            <%= link_to 'Item Management', item_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
          <li class="nav-item">
            <%= link_to 'Category Management', category_index_path, class: 'nav-link bi bi-folder'  %>
          </li>
          <li class="nav-item">
            <%= link_to 'Ticket Management', tickets_path, class: 'nav-link bi bi-folder'  %>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 d-flex flex-column">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-3">
        <div class="container-fluid">
          <div class="navbar-nav ms-auto d-flex align-items-center">
            <button class="btn btn-outline-secondary me-2">Change Language</button>
            <%= button_to 'Sign Out', destroy_admin_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </div>
        </div>
      </nav>

      <!-- Content Area -->
      <div class="container mt-4">
        <h1 class="mb-4">Tickets List</h1>

        <!-- Search Filters -->
        <%= form_with url: tickets_path, method: :get, class: 'row g-3 align-items-end mb-4' do |f| %>
          <div class="col-md-3">
            <%= f.label :serial_number, 'Serial Number', class: 'form-label' %>
            <%= f.text_field :serial_number, class: 'form-control', placeholder: 'Enter Serial Number' %>
          </div>

          <div class="col-md-3">
            <%= f.label :item_name, 'Item Name', class: 'form-label' %>
            <%= f.text_field :item_name, class: 'form-control', placeholder: 'Enter Item Name' %>
          </div>

          <div class="col-md-3">
            <%= f.label :email, 'User Email', class: 'form-label' %>
            <%= f.text_field :email, class: 'form-control', placeholder: 'Enter User Email' %>
          </div>

          <div class="col-md-2">
            <%= f.label :state, 'State', class: 'form-label' %>
            <%= f.select :state, options_for_select(@ticket_states, params[:state]), { include_blank: 'All States' }, class: 'form-select' %>
          </div>

          <div class="col-md-3">
            <%= f.label :start_date, 'Start Date', class: 'form-label' %>
            <%= f.date_field :start_date, class: 'form-control' %>
          </div>

          <div class="col-md-3">
            <%= f.label :end_date, 'End Date', class: 'form-label' %>
            <%= f.date_field :end_date, class: 'form-control' %>
          </div>

          <div class="col-md-2">
            <%= f.submit 'Filter', class: 'btn btn-primary w-100' %>
          </div>
        <% end %>

        <!-- Table -->
        <table class="table table-bordered table-striped table-hover">
          <thead class="table-primary">
          <tr>
            <th>Ticket ID</th>
            <th>Item ID</th>
            <th>Item Name</th>
            <th>User Email</th>
            <th>Batch Count</th>
            <th>Coins</th>
            <th>State</th>
            <th>Serial Number</th>
            <th>Created At</th>
          </tr>
          </thead>
          <tbody>
          <% @tickets.each do |ticket| %>
            <tr>
              <td><%= ticket.id %></td>
              <td><%= ticket.item_id %></td>
              <td><%= ticket.item.name %></td>
              <td><%= ticket.user.email %></td>
              <td><%= ticket.batch_count %></td>
              <td><%= ticket.coins %></td>
              <td><%= ticket.state %></td>
              <td><%= ticket.serial_number %></td>
              <td><%= ticket.created_at.strftime('%Y-%m-%d') %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

<style>
    /* Sidebar */
    .sidebar {
        transition: background-color 0.3s;
        height: 100vh;  /* Ensure full height of screen */
        position: sticky;
    }

    .sidebar .nav-link {
        transition: background-color 0.3s, color 0.3s;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    /* Content Area */
    .content {
        background: #f8f9fa;
        height: 100vh; /* Fill the available space */
        overflow: auto;
    }

    .table th, .table td {
        vertical-align: middle; /* Vertically center the table content */
    }

    .table img {
        width: 50px; /* Ensure the image is small */
        height: 50px; /* Keep the image square */
        object-fit: cover; /* Ensure the image does not stretch */
    }

    .navbar {
        border-bottom: 1px solid #eaeaea;
    }

    .navbar-nav .btn {
        transition: background-color 0.3s;
    }

    .navbar-nav .btn:hover {
        background-color: #dc3545;
        color: white;
    }

    /* Ensure the content doesn't overflow */
    .d-flex.flex-column {
        flex: 1;
    }

    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
    }
</style>