<div class="button-container">
  <%= link_to 'Order History', client_profile_path, class: 'custom-button' %>
  <%= link_to 'Lottery History', client_lottery_history_path, class: 'custom-button' %>
  <%#= link_to 'Winning History', winning_history_path, class: 'custom-button' %>
  <%#= link_to 'Invitation History', invitation_history_path, class: 'custom-button' %>
</div>

<style>
    /* app/assets/stylesheets/custom_buttons.css */
    .button-container {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin: 30px 0;
    }

    .custom-button {
        display: inline-block;
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
        color: #fff;
        font-size: 16px;
        font-family: 'Roboto', sans-serif;
        font-weight: bold;
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .custom-button:hover {
        background: linear-gradient(135deg, #8f94fb, #4e54c8); /* Reverse gradient */
        transform: translateY(-3px);
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
    }

    .custom-button:active {
        transform: translateY(1px);
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
    }


</style>