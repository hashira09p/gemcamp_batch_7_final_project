<%= render "partial/header" %>
<%= alert %>

<div class="container my-5">
  <!-- Header -->
  <h2 class="text-center mb-4 text-primary fw-bold">Edit Client User</h2>

  <%= form_for(resource, as: resource_name, url: client_user_registration_path(resource_name), html: { method: :put, class: "bg-light p-5 rounded shadow-lg mx-auto", style: "max-width: 500px;" }) do |f| %>
    <!-- Error Messages -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Image Upload -->
    <div class="mb-4">
      <%= f.label :image, class: "form-label fw-bold text-muted" %>
      <%= f.file_field :image, class: "form-control form-control-lg" %>
    </div>

    <!-- Username -->
    <div class="mb-4">
      <%= f.label :username, class: "form-label fw-bold text-muted" %>
      <%= f.text_field :username, class: "form-control form-control-lg", placeholder: "Enter your username" %>
    </div>

    <!-- Phone Number -->
    <div class="mb-4">
      <%= f.label :phone_number, class: "form-label fw-bold text-muted" %>
      <%= f.text_field :phone_number, class: "form-control form-control-lg", placeholder: "Enter your phone number" %>
    </div>

    <!-- Confirmation Alert (if applicable) -->
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-warning text-center mb-4">
        Waiting for confirmation on: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <!-- Password -->
    <div class="mb-4">
      <%= f.label :password, class: "form-label fw-bold text-muted" %>
      <span class="text-muted">(Leave blank if you donâ€™t want to change it)</span>
      <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Enter new password" %>
      <% if @minimum_password_length %>
        <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
      <% end %>
    </div>

    <!-- Password Confirmation -->
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "form-label fw-bold text-muted" %>
      <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirm your password" %>
    </div>

    <!-- Current Password -->
    <div class="mb-4">
      <%= f.label :current_password, class: "form-label fw-bold text-muted" %>
      <span class="text-muted">(Required to confirm changes)</span>
      <%= f.password_field :current_password, class: "form-control form-control-lg", placeholder: "Enter current password" %>
    </div>

    <!-- Submit Button -->
    <div class="d-grid mb-3">
      <%= f.submit "Update", class: "btn btn-primary btn-lg fw-bold" %>
    </div>

    <!-- Additional Links -->
    <div class="d-grid mb-3">
      <%= link_to "Cash In", "#", class: "btn btn-outline-primary btn-lg fw-bold" %>
    </div>
    <div class="d-grid mb-3">
      <%= link_to "Address", addresses_path, class: "btn btn-outline-primary btn-lg fw-bold" %>
    </div>
  <% end %>

  <!-- Back Button -->
  <div class="text-center mt-4">
    <%= link_to "Back", client_root_path, class: "btn btn-link text-muted fw-bold" %>
  </div>
</div>

<%= render "partial/footer" %>
