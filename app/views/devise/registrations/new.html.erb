<%= alert %>
<!-- Remove Gradient Background for the entire section -->
<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background: #ffffff;">
  <div class="row justify-content-center w-100">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card shadow-lg border-0" style="border-radius: 15px;">
        <div class="card-body p-5 bg-white" style="border-radius: 15px;">

          <!-- Login/Register Tabs -->
          <h2 class="text-center text-dark mb-4">Sign Up</h2>
          <div class="btn-group w-100 mb-4" role="group">
            <%= link_to "Login", new_session_path(resource_name), class: "btn btn-outline-warning w-50", type: "button" %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-secondary active w-50", type: "button" %>
          </div>

          <%= form_for(resource, as: resource_name, url: client_user_registration_path) do |f| %>
            <% if @promoter.present? %>
              <div class="form-group mb-3">
                <%= f.label :promoter, "Promoter's Name", class: "form-label" %>
                <%= f.text_field :username, value: @promoter.username, autofocus: true, autocomplete: "username", class: "form-control", disabled: true %>
              </div>
            <% end %>

            <!-- Email Field -->
            <div class="form-group mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
            </div>

            <!-- Password Confirmation -->
            <div class="form-group mb-4">
              <%= f.label :password_confirmation, "Password Confirmation", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <%= f.submit "Sign Up", class: "btn btn-gradient-primary btn-lg w-100" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>

<style>
    /* Remove Gradient Background for input fields */
    .form-control {
        background: #f3f4f7; /* Plain background color */
        border: 1px solid transparent;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    .form-control:focus {
        background: #e3e4e8; /* Slightly darker background on focus */
        border-color: #2575fc;
        box-shadow: 0 0 8px rgba(37, 117, 252, 0.6);
    }

    /* Gradient Button for "Sign Up" */
    .btn-gradient-primary {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        color: #fff;
        border: none;
        transition: background 0.3s ease;
        border-radius: 10px;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(135deg, #feb47b, #ff7e5f);
    }

    /* Customizing the form container */
    .card-body {
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
    }

    /* Custom button style for 'Login' and 'Sign up' tabs */
    .btn-outline-warning, .btn-outline-secondary {
        border-radius: 10px;
    }
</style>
