<%= render "partial/header" %>
<%= notice %>
<%= alert %>

<div class="container my-5">
  <div class="card shadow border-0">
    <div class="card-header bg-success text-white">
      <h2 class="mb-0 text-center">Share Your Feedback for <%= @winner_ticket.item.name %></h2>
    </div>
    <div class="card-body">
      <%= form_with model: @winner_ticket, url: winner_share_path(@winner_ticket), local: true, html: { class: "needs-validation", novalidate: true } do |form| %>
        <div class="mb-4">
          <%= form.label :comment, "Your Message", class: "form-label fw-bold" %>
          <%= form.text_area :comment, class: "form-control", rows: 5, placeholder: "Write your feedback here..." %>
        </div>

        <div class="mb-4">
          <%= form.label :image, "Upload Image", class: "form-label fw-bold" %>
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= form.submit "Share Feedback", class: "btn btn-success btn-lg px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "partial/footer" %>
