<style>
    .container {
        max-width: 1200px; /* Adjust as necessary */
        margin: auto;
        padding: 0 15px;
    }

    .border {
        border: 1px solid #dee2e6;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .btn {
            font-size: 0.8rem; /* Smaller button text */
            padding: 0.5rem 0.75rem; /* Smaller padding */
        }

        h2, h5 {
            font-size: 1.25rem; /* Smaller headings */
        }

        .row > div {
            flex: 1 0 100%; /* Stack columns on smaller screens */
            margin-bottom: 15px; /* Space between rows */
        }
    }
</style>

<div class="container">
  <!-- Header Section -->
  <div class="d-flex justify-content-between align-items-center py-3">
    <div class="d-flex align-items-center">
      <button class="btn btn-light">Logo</button>
    </div>
    <div>
      <button class="btn btn-outline-secondary">Coins</button>
      <button class="btn btn-outline-secondary">Claim</button>
      <button class="btn btn-outline-secondary">Language</button>
      <%= link_to 'Menu', client_profile_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <!-- Banner Section -->
  <div class="d-flex justify-content-between align-items-center border py-3">
    <button class="btn btn-light">&lt;</button>
    <div class="flex-grow-1 text-center">
      <h2>Banner Image</h2>
    </div>
    <button class="btn btn-light">&gt;</button>
  </div>

  <!-- Announcement Section -->
  <div class="border-bottom py-2">
    <span>Announcement:</span>
  </div>

  <!-- Winners Feedback Section -->
  <div class="mt-3">
    <h5>Winners Feedback</h5>
    <div class="row">
      <div class="col-6 col-md-3"><div class="border p-4">Image 1</div></div>
      <div class="col-6 col-md-3"><div class="border p-4">Image 2</div></div>
      <div class="col-6 col-md-3"><div class="border p-4">Image 3</div></div>
      <div class="col-6 col-md-3"><div class="border p-4">More ...</div></div>
    </div>
  </div>

  <!-- Coming Soon Section -->
  <div class="mt-3">
    <h5>Coming Soon</h5>
    <div class="row">
      <div class="col-6 col-md-3"><div class="border p-4">Image 1</div></div>
      <div class="col-6 col-md-3"><div class="border p-4">Image 2</div></div>
      <div class="col-6 col-md-3"><div class="border p-4">Image 3</div></div>
      <div class="col-6 col-md-3"><div class="border p-4">More ...</div></div>
    </div>
  </div>
</div>


<%= render "partial/footer" %>

