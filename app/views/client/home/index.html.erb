<%= render "partial/header" %>

<!-- Banner Section -->
<section class="banner-section text-center py-5 mb-5 bg-light shadow-sm rounded border position-relative">
  <button
    class="btn btn-arrow rounded-circle shadow-sm position-absolute start-0 top-50 translate-middle-y"
    aria-label="Previous">
    <i class="bi bi-chevron-left"></i>
  </button>
  <h2 class="text-primary display-4 fw-bold mb-0">‚ú® Banner Image</h2>
  <button
    class="btn btn-arrow rounded-circle shadow-sm position-absolute end-0 top-50 translate-middle-y"
    aria-label="Next">
    <i class="bi bi-chevron-right"></i>
  </button>
</section>

<!-- Announcement Section -->
<section class="announcement-section py-4 mb-5 border-bottom">
  <div class="announcement-ticker bg-warning py-2 rounded shadow-sm overflow-hidden position-relative">
    <div
      class="announcement-scroll text-dark fw-bold d-inline-block"
      style="animation: scrollLeft 10s linear infinite;">
      üö® Announcement: Stay tuned for upcoming events! üöÄ Special offers are on the way! ‚ú®
    </div>
  </div>
</section>

<!-- Winners Feedback Section -->
<section class="winners-section mt-5">
  <h5 class="text-info fw-bold text-center mb-4">üèÜ Winners Feedback</h5>
  <div id="winnersCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @winners.each_slice(3).with_index do |winners_group, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 justify-content-center">
            <% winners_group.each do |winner| %>
              <div class="col">
                <div class="card shadow-sm border-0 text-center h-100">
                  <div class="card-body">
                    <%= image_tag(
                          winner.image.url,
                          class: "img-fluid shadow-sm",
                          style: "width: 100px; height: 100px; object-fit: cover;",
                          alt: winner.user.username
                        ) %>
                    <h5 class="fw-bold"><%= winner.user.username %></h5>
                    <p class="text-muted"><%= winner.comment %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#winnersCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#winnersCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>

<!-- Coming Soon Section -->
<section class="coming-soon-section mt-5">
  <h5 class="text-info fw-bold text-center mb-4">üéâ Coming Soon</h5>
  <div id="comingSoonCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @items.each_slice(3).with_index do |items_group, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 justify-content-center">
            <% items_group.each do |item| %>
              <% if item.quantity >= 0 %>
                <div class="col">
                  <div class="card shadow-sm border-0 text-center h-100">
                    <div class="card-body">
                      <%= image_tag(
                            item.image.url,
                            class: "img-fluid shadow-sm",
                            style: "width: 100px; height: 100px; object-fit: cover;",
                            alt: item.name
                          ) %>
                      <h5 class="fw-bold"><%= item.name %></h5>
                      <p class="text-muted">Start At: <%= item.start_at %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#comingSoonCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#comingSoonCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>

<%= render "partial/footer" %>

<!-- Custom CSS -->
<style>
    /* Announcement Ticker */
    .announcement-ticker {
        overflow: hidden;
    }

    .announcement-scroll {
        white-space: nowrap;
        animation: scrollLeft 10s linear infinite;
    }

    @keyframes scrollLeft {
        from {
            transform: translateX(100%);
        }
        to {
            transform: translateX(-100%);
        }
    }

    /* Card Hover Effect */
    .card:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease-in-out;
    }

    /* Carousel Adjustments */
    .carousel-inner {
        padding: 15px;
    }

    .carousel-item {
        transition: transform 0.3s ease-in-out;
    }

    /* Black Arrow Button Styles */
    .btn-arrow {
        background-color: #000; /* Set background color to black */
        border: none;
        padding: 15px;
        font-size: 2rem;
        color: white; /* Set icon color to white */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-arrow:hover {
        transform: scale(1.1);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        background-color: #333; /* Darker shade on hover */
    }

    /* Arrow icons */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        width: 40px;
        height: 40px;
        background-color: #000; /* Set background color of arrows to black */
        border-radius: 50%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .carousel-control-prev-icon:before,
    .carousel-control-next-icon:before {
        font-size: 1.5rem;
        color: #fff; /* Set the icon color to white */
    }

    .carousel-control-prev-icon:hover,
    .carousel-control-next-icon:hover {
        background-color: #333; /* Darker shade when hovered */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.25);
    }

    /* Remove rounded corners for images */
    .img-fluid {
        border-radius: 0; /* Removes the circular shape */
        object-fit: cover;
    }

    /* Optionally, you can add a subtle border */
    .img-fluid {
        border: 2px solid #ddd; /* Adds a subtle border */
    }


    /* Responsive Helpers */
    @media (max-width: 768px) {
        .banner-section h2 {
            font-size: 1.5rem;
        }

        /* Adjust carousel item size for smaller screens */
        .carousel-item img {
            width: 80px;
            height: 80px;
        }

        /* Adjust button size */
        .btn-arrow {
            padding: 10px;
            font-size: 1.5rem;
        }
    }
</style>
