<%= render "partial/header" %>

<div class="container py-5">
  <!-- Page Title -->
  <div class="text-center mb-5">
    <h1 class="display-4 text-primary fw-bold">Scan This QR</h1>
    <p class="text-muted">Quick and easy access to sign up!</p>
  </div>

  <!-- QR Code Section -->
  <div class="d-flex justify-content-center align-items-center mb-5">
    <div class="bg-white shadow-lg rounded p-4 border">
      <%= @qrcode_png.html_safe %>
    </div>
  </div>

  <!-- Signup Link Section -->
  <div class="text-center mt-4">
    <p class="lead fw-semibold mb-3 text-secondary">Or use the link below to sign up:</p>
    <div class="bg-light p-3 shadow-sm rounded d-inline-block">
      <a href="<%= "https://3ef2-175-176-38-130.ngrok-free.app/users/sign_up?promoter=#{current_client_user.email}" %>"
         class="text-primary fw-bold text-decoration-none"
         target="_blank">
        <%= "https://3ef2-175-176-38-130.ngrok-free.app/users/sign_up?promoter=#{current_client_user.email}" %>
      </a>
    </div>
  </div>
</div>

<%= render "partial/footer" %>
